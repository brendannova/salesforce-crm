<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>HubwisePersonIdFormat</fullName>
    <active>true</active>
    <description>Ensures that the Hubwise Person ID is entered in a format of CPI000#####.</description>
    <errorConditionFormula>!$Setup.SystemConfiguration__c.ValidationBypass__c 
&amp;&amp;
NOT(ISBLANK(HubwisePersonId__c))
&amp;&amp;
NOT(REGEX(HubwisePersonId__c, &quot;^CPI000[0-9]{5}$&quot;))</errorConditionFormula>
    <errorDisplayField>HubwisePersonId__c</errorDisplayField>
    <errorMessage>The Hubwise Person ID must be in a format of CPI000#####.</errorMessage>
</ValidationRule>
