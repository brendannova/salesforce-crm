<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>SortCodeFormat</fullName>
    <active>true</active>
    <description>Ensures that the sort code meets a required format of ##-##-## where # is any digit from 0-9.</description>
    <errorConditionFormula>!$Setup.SystemConfiguration__c.ValidationBypass__c &amp;&amp;
NOT(OR(ISBLANK( Bank_sort_code__c ),
REGEX(  Bank_sort_code__c, &quot;[0-9]{2}-[0-9]{2}-[0-9]{2}&quot;)))
&amp;&amp;
NOT(ISPICKVAL($User.OW_user_type__c,&quot;Integration&quot;))</errorConditionFormula>
    <errorDisplayField>Bank_sort_code__c</errorDisplayField>
    <errorMessage>Sort code must be in ##-##-## format</errorMessage>
</ValidationRule>
