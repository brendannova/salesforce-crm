<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>BusinessAcceptedRoles</fullName>
    <active>true</active>
    <description>Lists which roles can be chosen where the account is a business.</description>
    <errorConditionFormula>!$Setup.SystemConfiguration__c.ValidationBypass__c 
&amp;&amp;
Account.RecordType.DeveloperName = &quot;OW_business&quot; 
&amp;&amp;
NOT(INCLUDES(Roles, &quot;Employee&quot;))</errorConditionFormula>
    <errorDisplayField>Roles</errorDisplayField>
    <errorMessage>Only the employee role can be used where the account is a business.</errorMessage>
</ValidationRule>
