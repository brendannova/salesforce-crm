<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>AccountNumberFormat</fullName>
    <active>true</active>
    <description>Ensures account numbers are numbers only</description>
    <errorConditionFormula>!$Setup.SystemConfiguration__c.ValidationBypass__c &amp;&amp; NOT(REGEX(AccountNumber__c, &quot;[0-9]{8}&quot;))</errorConditionFormula>
    <errorDisplayField>AccountNumber__c</errorDisplayField>
    <errorMessage>Account numbers can only contain numbers</errorMessage>
</ValidationRule>
