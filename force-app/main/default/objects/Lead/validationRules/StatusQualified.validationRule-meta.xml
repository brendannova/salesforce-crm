<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>StatusQualified</fullName>
    <active>true</active>
    <description>Validations if the stage is moved to Nurturing Sales Qualified</description>
    <errorConditionFormula>!$Setup.SystemConfiguration__c.ValidationBypass__c
&amp;&amp;
(ISPICKVAL(Qualification__c, &quot;Qualified&quot;)
&amp;&amp;
ISPICKVAL(Qualified_Level__c,&quot;&quot;)
||
ISPICKVAL(Status, &quot;Nurturing | Sales Qualified&quot;)
&amp;&amp;
ISPICKVAL(Qualified_Level__c,&quot;&quot;)
)</errorConditionFormula>
    <errorDisplayField>Qualified_Level__c</errorDisplayField>
    <errorMessage>You need to complete the &apos;Qualified&apos; section</errorMessage>
</ValidationRule>
