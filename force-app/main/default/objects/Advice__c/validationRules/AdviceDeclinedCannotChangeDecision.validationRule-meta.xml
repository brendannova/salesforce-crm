<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>AdviceDeclinedCannotChangeDecision</fullName>
    <active>true</active>
    <description>Once advice has been declined, it cannot be moved to another status.</description>
    <errorConditionFormula>!$Setup.SystemConfiguration__c.ValidationBypass__c
&amp;&amp; 
ISPICKVAL(PRIORVALUE(Advice_Status__c), &quot;Suitability declined&quot;)
&amp;&amp;
NOT(ISPICKVAL( Advice_Status__c, &quot;Suitability declined&quot; ))
&amp;&amp;
$User.Username &lt;&gt; &quot;cian@novawm.com&quot;</errorConditionFormula>
    <errorDisplayField>Advice_Status__c</errorDisplayField>
    <errorMessage>Declined advice cannot be moved to another status.</errorMessage>
</ValidationRule>
