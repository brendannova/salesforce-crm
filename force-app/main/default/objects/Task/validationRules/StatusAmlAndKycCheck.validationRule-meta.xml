<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>StatusAmlAndKycCheck</fullName>
    <active>true</active>
    <description>Related AML must have an AML Google Drive for a &#39;aml_and_kyc_check&#39; tasks</description>
    <errorConditionFormula>!$Setup.SystemConfiguration__c.ValidationBypass__c &amp;&amp;
AND(
 OW_task_information_identifier__c  = &quot;aml_and_kyc_check&quot;,
ISPICKVAL(Status, &quot;Completed&quot;),
ISBLANK( Related_AML_KYC_Check__r.AML_G_Drive_Folder__c)
)</errorConditionFormula>
    <errorMessage>Remember to add in the link to the client&#39;s AML g-drive folder</errorMessage>
</ValidationRule>
