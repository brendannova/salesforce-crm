<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>StatusChaseFullFactFind</fullName>
    <active>true</active>
    <description>Cannot set task to complete if related fact find is not complete</description>
    <errorConditionFormula>!$Setup.SystemConfiguration__c.ValidationBypass__c &amp;&amp;
AND(
  RecordType.DeveloperName  = &#39;Chase_Full_Fact_Find&#39;,
 ISPICKVAL(Status, &quot;Completed&quot;), 
 NOT(ISPICKVAL(Related_Fact_Find__r.FF_Status__c , &quot;Complete&quot;))
)</errorConditionFormula>
    <errorDisplayField>Status</errorDisplayField>
    <errorMessage>You need to mark the Fact Find as complete.</errorMessage>
</ValidationRule>
