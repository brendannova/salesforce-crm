<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>StatusOpsCoordinatorMustSignOff</fullName>
    <active>true</active>
    <description>Ensures case can&#39;t be completed unless the coordinator has signed off</description>
    <errorConditionFormula>!$Setup.SystemConfiguration__c.ValidationBypass__c
&amp;&amp;
RecordType.DeveloperName = &quot;Offboarding&quot;
&amp;&amp;
ISPICKVAL(Type, &quot;OFFBOARDING_ACTIVE_CUSTOMER&quot;)
&amp;&amp;
NOT(CoordinatorSignOff__c)
&amp;&amp;
(ISPICKVAL(Status, &quot;Complete&quot;) ||
ISPICKVAL(Status, &quot;Cancelled&quot;))</errorConditionFormula>
    <errorMessage>Cases can&#39;t be completed unless the co-ordinator has signed them off</errorMessage>
</ValidationRule>
