<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>CaseNumber</field>
        <field>Owner</field>
        <field>Type</field>
        <field>DateOfRequest__c</field>
        <field>OW_household__c</field>
        <field>Person__c</field>
        <field>FirstNameBefore__c</field>
        <field>FirstNameAfter__c</field>
        <field>MiddleNameBefore__c</field>
        <field>MiddleNameAfter__c</field>
        <field>LastNameBefore__c</field>
        <field>LastNameAfter__c</field>
        <field>Description</field>
        <field>DocumentUrl__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>NameChange</name>
                <type>queue</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>Step 1</label>
        <name>Step_1</name>
    </approvalStep>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <booleanFilter>1 AND 2 AND 3 AND (4 OR 5)</booleanFilter>
        <criteriaItems>
            <field>Case.Type</field>
            <operation>equals</operation>
            <value>Name Change</value>
        </criteriaItems>
        <criteriaItems>
            <field>Case.RecordType</field>
            <operation>equals</operation>
            <value>Personal Information Change</value>
        </criteriaItems>
        <criteriaItems>
            <field>Case.Status</field>
            <operation>equals</operation>
            <value>In Progress</value>
        </criteriaItems>
        <criteriaItems>
            <field>Case.ChangeApprovalStatus__c</field>
            <operation>equals</operation>
        </criteriaItems>
        <criteriaItems>
            <field>Case.ChangeApprovalStatus__c</field>
            <operation>equals</operation>
            <value>Recalled,Rejected</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>ChangeApprovalStatusApproved</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>StatusInProgress</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>ChangeApprovalStatusInRejected</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>StatusInProgress</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>ChangeApprovalStatusInApproval</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>StatusApproval</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Case | Name Change</label>
    <processOrder>1</processOrder>
    <recallActions>
        <action>
            <name>ChangeApprovalStatusRecalled</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>StatusInProgress</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
