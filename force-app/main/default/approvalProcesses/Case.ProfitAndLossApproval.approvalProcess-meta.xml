<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>false</allowRecall>
    <allowedSubmitters>
        <type>allInternalUsers</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>CaseNumber</field>
        <field>Owner</field>
        <field>WhatShouldHaveHappened__c</field>
        <field>WhatActuallyHappened__c</field>
        <field>PLOutcome__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>OW_planners</name>
                <type>queue</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>Planner review step</description>
        <label>Planner approval</label>
        <name>PlannerApproval</name>
    </approvalStep>
    
    <description>Submit for approval for P&amp;L case</description>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>Case.Status</field>
            <operation>equals</operation>
            <value>In Progress</value>
        </criteriaItems>
        <criteriaItems>
            <field>Case.RecordType</field>
            <operation>equals</operation>
            <value>Profit &amp; Loss</value>
        </criteriaItems>
        <criteriaItems>
            <field>Case.Platform__c</field>
            <operation>equals</operation>
            <value>Nova</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>ChangeApprovalStatusApproved</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>StatusInProgress</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>ChangeApprovalStatusInRejected</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>StatusInProgress</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>ChangeApprovalStatusInApproval</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>StatusApproval</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>P&amp;L approval</label>
    <nextAutomatedApprover>
        <useApproverFieldOfRecordOwner>false</useApproverFieldOfRecordOwner>
        <userHierarchyField>Manager</userHierarchyField>
    </nextAutomatedApprover>
    <processOrder>2</processOrder>
    <recallActions>
        <action>
            <name>ChangeApprovalStatusRecalled</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>StatusInProgress</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
