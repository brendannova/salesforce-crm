    <description>Flow to allow planners to record that an existing regular should be cancelled</description>
    <environments>Default</environments>
    <formulas>
        <name>earliestFulfilmentDate</name>
        <dataType>Date</dataType>
        <expression>IF({!lastMonth} = &quot;Immediate cancellation&quot;, {!$Flow.CurrentDate} - 1,DATE({!earliestFulfilmentYear}, {!month}, {!regularDay}) + 7)</expression>
    </formulas>
    <formulas>
        <name>earliestFulfilmentYear</name>
        <dataType>Number</dataType>
        <expression>IF( MONTH({!$Flow.CurrentDate}) &gt; {!month}, YEAR({!$Flow.CurrentDate}) + 1, YEAR({!$Flow.CurrentDate}))</expression>
        <scale>2</scale>
    </formulas>
    <formulas>
        <name>month</name>
        <dataType>Number</dataType>
        <expression>IF( {!lastMonth}=&quot;January&quot;, 1,
  IF( {!lastMonth}=&quot;February&quot;, 2,
    IF( {!lastMonth}=&quot;March&quot;, 3,
      IF( {!lastMonth}=&quot;April&quot;, 4,
        IF( {!lastMonth}=&quot;May&quot;, 5,
          IF( {!lastMonth}=&quot;June&quot;, 6,
            IF( {!lastMonth}=&quot;July&quot;, 7,
              IF( {!lastMonth}=&quot;August&quot;, 8,
                IF( {!lastMonth}=&quot;September&quot;, 9,
                  IF( {!lastMonth}=&quot;October&quot;, 10,
                    IF( {!lastMonth}=&quot;November&quot;, 11,
                      IF( {!lastMonth}=&quot;December&quot;, 12, 0
                      )
                    )
                  )
                )
              )
            )
          )
        )
      )
    )
  )
)</expression>
        <scale>2</scale>
    </formulas>
    <formulas>
        <name>regularDay</name>
        <dataType>Number</dataType>
        <expression>IF({!productselect.firstSelectedRow.FinServ__RecordTypeName__c}=&quot;SIPP&quot;,{!$Setup.OW_business_configuration__c.SippRegularDay__c}, {!$Setup.OW_business_configuration__c.IsaGiaRegularDay__c})</expression>
        <scale>2</scale>
    </formulas>
