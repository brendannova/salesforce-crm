    <formulas>
        <name>ActionsMitigationsFormula</name>
        <dataType>String</dataType>
        <expression>IF(ISBLANK({!COI_Actions_mitigations}),{!Vulnerability_actions_mitigations1}, {!COI_Actions_mitigations})</expression>
    </formulas>
    <formulas>
        <description>Displays Vulnerability assessment details if notes component is blank. Used to set Notes__c field on customer fact.</description>
        <name>NotesFormula</name>
        <dataType>String</dataType>
        <expression>IF(ISBLANK({!Notes}), {!Vulnerability_assessment_details}, {!Notes})</expression>
    </formulas>
