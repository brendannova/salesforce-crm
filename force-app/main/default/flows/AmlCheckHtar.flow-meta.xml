                <elementReference>Get_AML.HtarApprovalStatus__c</elementReference>
            </defaultValue>
            <fieldText>HTAR status</fieldText>
            <fieldType>DropdownBox</fieldType>
            <inputsOnNextNavToAssocScrn>UseStoredValues</inputsOnNextNavToAssocScrn>
            <isRequired>true</isRequired>
        </fields>
        <fields>
            <name>Details_Section1</name>
            <fieldType>RegionContainer</fieldType>
            <fields>
                <name>Details_Section1_Column1</name>
                <fieldType>Region</fieldType>
                <fields>
                    <name>htarLink</name>
                    <extensionName>flowruntime:url</extensionName>
                    <fieldType>ComponentInstance</fieldType>
                    <inputParameters>
                        <name>label</name>
                        <value>
                            <stringValue>Link to HTAR documentation</stringValue>
                        </value>
                    </inputParameters>
                    <inputParameters>
                        <name>value</name>
                        <value>
                            <elementReference>Get_AML.HtarDocumentsLink__c</elementReference>
                        </value>
                    </inputParameters>
                    <inputsOnNextNavToAssocScrn>UseStoredValues</inputsOnNextNavToAssocScrn>
                    <isRequired>true</isRequired>
                    <storeOutputAutomatically>true</storeOutputAutomatically>
                </fields>
                <fields>
                    <name>Do_the_payslips_match_the_bank_statements</name>
                    <dataType>Boolean</dataType>
                    <fieldText>Do the payslips match the bank statements?</fieldText>
                    <fieldType>InputField</fieldType>
                    <inputsOnNextNavToAssocScrn>UseStoredValues</inputsOnNextNavToAssocScrn>
                    <isRequired>true</isRequired>
                    <validationRule>
                        <errorMessage>&lt;p&gt;Please affirm that the payslips align with the bank statements. &lt;/p&gt;</errorMessage>
                        <formulaExpression>NOT(({!HTAR_status}= &quot;Approved&quot; || {!HTAR_status}= &quot;Approved following checks&quot; || {!HTAR_status}= &quot;Escalated to MLRO&quot;) &amp;&amp; NOT({!Do_the_payslips_match_the_bank_statements}) )</formulaExpression>
                    </validationRule>
                </fields>
                <fields>
                    <name>HTAR_approval_notes</name>
                    <dataType>String</dataType>
                    <defaultValue>
                        <elementReference>Get_AML.HtarNotes__c</elementReference>
                    </defaultValue>
                    <fieldText>HTAR approval notes</fieldText>
                    <fieldType>InputField</fieldType>
                    <inputsOnNextNavToAssocScrn>UseStoredValues</inputsOnNextNavToAssocScrn>
                    <isRequired>true</isRequired>
                </fields>
                <inputParameters>
                    <name>width</name>
                    <value>
                        <stringValue>12</stringValue>
                    </value>
                </inputParameters>
                <isRequired>false</isRequired>
            </fields>
            <isRequired>false</isRequired>
            <regionContainerType>SectionWithoutHeader</regionContainerType>
            <visibilityRule>
                <conditionLogic>or</conditionLogic>
                <conditions>
                    <leftValueReference>HTAR_status</leftValueReference>
                    <operator>EqualTo</operator>
                    <rightValue>
                        <stringValue>Approved following checks</stringValue>
                    </rightValue>
                </conditions>
                <conditions>
                    <leftValueReference>HTAR_status</leftValueReference>
                    <operator>EqualTo</operator>
                    <rightValue>
                        <stringValue>Escalated to MLRO</stringValue>
                    </rightValue>
                </conditions>
            </visibilityRule>
        </fields>
