    <formulas>
        <description>Calculates the last day of the following month</description>
        <name>LastDayNextMonth</name>
        <dataType>Date</dataType>
        <expression>IF(
  MONTH(ADDMONTHS( TODAY(), 1)) = 12,
  DATE( YEAR( TODAY() ), 12, 31 ),
  DATE( YEAR( TODAY() ), MONTH (ADDMONTHS( TODAY(),1 )) + 1, 1 ) - 1 
)</expression>
    </formulas>
    <formulas>
        <name>LastMonthDay1</name>
        <dataType>Date</dataType>
        <expression>IF(
    MONTH(TODAY()) = 1,
    DATE(YEAR(TODAY()) - 1, 12, 01),
    DATE(YEAR(TODAY()), MONTH(TODAY()) - 1, 01)
)</expression>
    </formulas>
