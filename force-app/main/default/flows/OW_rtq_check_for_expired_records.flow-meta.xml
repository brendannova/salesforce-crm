<?xml version="1.0" encoding="UTF-8"?>
<Flow xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>55.0</apiVersion>
    <decisions>
        <description>Checks if today&#39;s date is greater than the expiry date.</description>
        <name>Is_this_RTQ_out_of_date</name>
        <label>Is this RTQ out of date?</label>
        <locationX>182</locationX>
        <locationY>252</locationY>
        <defaultConnectorLabel>No</defaultConnectorLabel>
        <rules>
            <name>Yes</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>$Flow.CurrentDate</leftValueReference>
                <operator>GreaterThan</operator>
                <rightValue>
                    <elementReference>rtqExpiryDate</elementReference>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Update_RTQ</targetReference>
            </connector>
            <label>Yes</label>
        </rules>
    </decisions>
    <description>This is a scheduled flow which checks if RTQs are older than the RTQ expiry time stored is custom metadata. It then calls person and household sub flows to update their statuses.</description>
    <environments>Default</environments>
    <formulas>
        <description>The date on which the RTQ should expire given it&#39;s date of completion and the current risk score expiry time from the custom setting.</description>
        <name>rtqExpiryDate</name>
        <dataType>Date</dataType>
        <expression>DATEVALUE({!$Record.OW_completed_by_client__c}) + {!$Setup.OW_business_configuration__c.OW_risk_score_expiry_time__c}</expression>
    </formulas>
    <interviewLabel>RTQ | {!$Flow.CurrentDateTime}</interviewLabel>
    <label>RTQ | check for expired records</label>
    <processMetadataValues>
        <name>BuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>CanvasMode</name>
        <value>
            <stringValue>AUTO_LAYOUT_CANVAS</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>OriginBuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processType>AutoLaunchedFlow</processType>
    <recordUpdates>
        <name>Update_RTQ</name>
        <label>Update RTQ</label>
        <locationX>50</locationX>
        <locationY>360</locationY>
        <connector>
            <targetReference>Call_person_account_update_flow</targetReference>
        </connector>
        <inputAssignments>
            <field>OW_expiry_date__c</field>
            <value>
                <elementReference>$Flow.CurrentDate</elementReference>
            </value>
        </inputAssignments>
        <inputAssignments>
            <field>OW_status__c</field>
            <value>
                <stringValue>Out of date</stringValue>
            </value>
        </inputAssignments>
        <inputReference>$Record</inputReference>
    </recordUpdates>
    <start>
        <locationX>56</locationX>
        <locationY>0</locationY>
        <connector>
            <targetReference>Is_this_RTQ_out_of_date</targetReference>
        </connector>
        <filterLogic>and</filterLogic>
        <filters>
            <field>OW_status__c</field>
            <operator>EqualTo</operator>
            <value>
                <stringValue>Closed</stringValue>
            </value>
        </filters>
        <filters>
            <field>OW_expiry_date__c</field>
            <operator>IsNull</operator>
            <value>
                <booleanValue>true</booleanValue>
            </value>
        </filters>
        <object>OW_rtq__c</object>
        <schedule>
            <frequency>Daily</frequency>
            <startDate>2022-07-19</startDate>
            <startTime>00:15:00.000Z</startTime>
        </schedule>
        <triggerType>Scheduled</triggerType>
    </start>
    <status>Active</status>
    <subflows>
        <name>Call_person_account_update_flow</name>
        <label>Call person account update flow</label>
        <locationX>50</locationX>
        <locationY>468</locationY>
        <connector>
            <targetReference>Update_household_status</targetReference>
        </connector>
        <flowName>OW_account_rtq_sub</flowName>
        <inputAssignments>
            <name>RTQ</name>
            <value>
                <elementReference>$Record</elementReference>
            </value>
        </inputAssignments>
    </subflows>
    <subflows>
        <name>Update_household_status</name>
        <label>Update household status</label>
        <locationX>50</locationX>
        <locationY>576</locationY>
        <flowName>OW_Rtq_evaluate_household_Rtq_status</flowName>
        <inputAssignments>
            <name>householdId</name>
            <value>
                <elementReference>$Record.OW_household__c</elementReference>
            </value>
        </inputAssignments>
    </subflows>
</Flow>
