            </connector>
            <label>No - deleted by client</label>
        </rules>
    </decisions>
    <description>This flow will run whenever criteria defined within it are met to capture a record of the changes made by an internal user.</description>
    <environments>Default</environments>
    <formulas>
        <description>Set FF session change type based on if modifed by integration user or not</description>
        <name>changeType</name>
        <dataType>String</dataType>
        <expression>IF({!$Record.PlatformLastModifiedBy__c} == {!Get_Integration_User.Id}, {!clientUpdateValue}, {!internalUserUpdateValue})</expression>
    </formulas>
    <formulas>
        <name>ffSessionObject</name>
        <dataType>String</dataType>
        <expression>&quot;Employment | &quot; &amp; {!$Record.Person_Account__r.FirstName} &amp; &quot; | &quot; &amp; {!$Record.Name}</expression>
    </formulas>
    <formulas>
        <name>matchId</name>
        <dataType>String</dataType>
        <expression>IF(ISBLANK({!$Record.match_id__c}), 
{!$Record.Id}, 
{!$Record.match_id__c}
)</expression>
    </formulas>
    <formulas>
        <name>recordTypeMapping</name>
        <dataType>String</dataType>
        <expression>CASE({!$Record.RecordType.DeveloperName}, 
&quot;Employment&quot;,&quot;0124J000000xsddQAA&quot;,
&quot;Not_Currently_Working&quot;,&quot;0124J000000xsdsQAA&quot;,
&quot;Retirement_Income&quot;,&quot;0124J000000xsdiQAA&quot;,
NULL)</expression>
    </formulas>
