<?xml version="1.0" encoding="UTF-8"?>
<Flow xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>63.0</apiVersion>
    <assignments>
        <name>Assign_output</name>
        <label>Assign output</label>
        <locationX>176</locationX>
        <locationY>134</locationY>
        <assignmentItems>
            <assignToReference>getsAnInformationRequest</assignToReference>
            <operator>Assign</operator>
            <value>
                <elementReference>decisionFormula</elementReference>
            </value>
        </assignmentItems>
    </assignments>
    <description>Sub flow to decide if a given financial product should receive an information request</description>
    <environments>Default</environments>
    <formulas>
        <name>decisionFormula</name>
        <dataType>Boolean</dataType>
        <expression>(
    (
        NOT(ISBLANK({!financialProduct.FinServ__PrimaryOwner__r.Date_terms_of_business_last_accepted__c}))
        &amp;&amp;
        (
            NOT(ISBLANK({!financialProduct.FinServ__JointOwner__r.Date_terms_of_business_last_accepted__c})) 
            ||
            ISBLANK({!financialProduct.FinServ__JointOwner__r.Date_terms_of_business_last_accepted__c})
        )
    )

    ||

    (
        (
            (CONTAINS({!financialProduct.RecordType.Name}, &quot;Junior&quot;) || {!financialProduct.FinServ__PrimaryOwner__r.FinServ__Age__pc} &lt; 18)
            &amp;&amp; 
            (
                ISPICKVAL({!financialProduct.FinServ__Household__r.FinServ__Status__c},&quot;Onboarding&quot;) 
                || 
                ISPICKVAL({!financialProduct.Household__r.FinServ__Status__c},&quot;Onboarding&quot;) 
                || 
                ISPICKVAL({!financialProduct.Household__r.FinServ__Status__c},&quot;Active&quot;) 
                || 
                ISPICKVAL({!financialProduct.FinServ__Household__r.FinServ__Status__c},&quot;Active&quot;)
            )
        )
    )
)
&amp;&amp;
NOT(ISPICKVAL({!financialProduct.BusinessType__c},&quot;New business&quot;))
&amp;&amp;
NOT(ISPICKVAL({!financialProduct.Work_Benefit_2__c},&quot;Yes&quot;))
&amp;&amp;
NOT({!financialProduct.Public_Provider_Name__r.DeveloperName__c} == &quot;WORK_BENEFIT&quot;)</expression>
    </formulas>
    <interviewLabel>Financial product | Assess information request requirement {!$Flow.CurrentDateTime}</interviewLabel>
    <label>Financial product | Assess information request requirement</label>
