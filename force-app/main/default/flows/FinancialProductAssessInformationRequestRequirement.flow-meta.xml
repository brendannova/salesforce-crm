    <description>Sub flow to decide if a given financial product should receive an information request</description>
    <environments>Default</environments>
    <formulas>
        <name>decisionFormula</name>
        <dataType>Boolean</dataType>
        <expression>(
    (
        NOT(ISBLANK({!Financial_products.FinServ__PrimaryOwner__r.Date_terms_of_business_last_accepted__c}))
        &amp;&amp;
        (
            NOT(ISBLANK({!Financial_products.FinServ__JointOwner__r.Date_terms_of_business_last_accepted__c})) 
            ||
            ISBLANK({!Financial_products.FinServ__JointOwner__r.Date_terms_of_business_last_accepted__c})
        )
    )

    ||

    (
        (
            (CONTAINS({!Financial_products.RecordType.Name}, &quot;Junior&quot;) || {!Financial_products.FinServ__PrimaryOwner__r.FinServ__Age__pc} &lt; 18)
            &amp;&amp; 
            (
                ISPICKVAL({!Financial_products.FinServ__Household__r.FinServ__Status__c},&quot;Onboarding&quot;) 
                || 
                ISPICKVAL({!Financial_products.Household__r.FinServ__Status__c},&quot;Onboarding&quot;) 
                || 
                ISPICKVAL({!Financial_products.Household__r.FinServ__Status__c},&quot;Active&quot;) 
                || 
                ISPICKVAL({!Financial_products.FinServ__Household__r.FinServ__Status__c},&quot;Active&quot;)
            )
        )
    )
)
&amp;&amp;
NOT(ISPICKVAL({!Financial_products.BusinessType__c},&quot;New business&quot;))
&amp;&amp;
NOT(ISPICKVAL({!Financial_products.Work_Benefit_2__c},&quot;Yes&quot;))
&amp;&amp;
NOT({!Financial_products.Public_Provider_Name__r.DeveloperName__c} == &quot;WORK_BENEFIT&quot;)</expression>
    </formulas>
