<?xml version="1.0" encoding="UTF-8"?>
<Flow xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>58.0</apiVersion>
    <assignments>
        <description>Update Status &amp; Reviewed Date</description>
        <name>SetSnapshotValues</name>
        <label>Set Snapshot Values</label>
        <locationX>176</locationX>
        <locationY>350</locationY>
        <assignmentItems>
            <assignToReference>GetSnapshotRecord.ComplianceCheckStatus__c</assignToReference>
            <operator>Assign</operator>
            <value>
                <stringValue>Reviewed</stringValue>
            </value>
        </assignmentItems>
        <assignmentItems>
            <assignToReference>GetSnapshotRecord.ComplianceDateReviewed__c</assignToReference>
            <operator>Assign</operator>
            <value>
                <elementReference>DateAndTimeNow</elementReference>
            </value>
        </assignmentItems>
        <connector>
            <targetReference>UpdateSnapshotStatus</targetReference>
        </connector>
    </assignments>
    <description>Used to mark snapshot compliance status to Reviewed, and removes share with CATS until date on the household.</description>
    <environments>Default</environments>
    <formulas>
        <name>CurrentMonthDay1</name>
        <dataType>Date</dataType>
        <expression>DATE(YEAR(TODAY()), MONTH(TODAY()), 01)</expression>
    </formulas>
    <formulas>
        <name>DateAndTimeNow</name>
        <dataType>DateTime</dataType>
        <expression>Now()</expression>
    </formulas>
    <formulas>
        <description>Calculates the last day of the following month</description>
        <name>LastDayNextMonth</name>
        <dataType>Date</dataType>
        <expression>IF(
  MONTH(ADDMONTHS( TODAY(), 1)) = 12,
  DATE( YEAR( TODAY() ), 12, 31 ),
  DATE( YEAR( TODAY() ), MONTH (ADDMONTHS( TODAY(),1 )) + 1, 1 ) - 1 
)</expression>
    </formulas>
    <formulas>
        <name>LastMonthDay1</name>
        <dataType>Date</dataType>
        <expression>IF(
    MONTH(TODAY()) = 1,
    DATE(YEAR(TODAY()) - 1, 12, 01),
    DATE(YEAR(TODAY()), MONTH(TODAY()) - 1, 01)
)</expression>
    </formulas>
    <formulas>
        <name>ReviewSharedCasesUrl</name>
        <dataType>String</dataType>
        <expression>LEFT({!$Api.Enterprise_Server_URL_260}, FIND( &#39;/services&#39;, {!$Api.Enterprise_Server_URL_260}))&amp;&quot;lightning/n/ComplianceReviewSharedCases&quot;</expression>
    </formulas>
    <interviewLabel>Compliance | Advice | Complete Review {!$Flow.CurrentDateTime}</interviewLabel>
    <label>Compliance | Advice | Complete Review</label>
