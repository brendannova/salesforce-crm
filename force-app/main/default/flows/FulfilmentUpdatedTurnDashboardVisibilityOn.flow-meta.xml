                <elementReference>$Record.Household_lookup__c</elementReference>
            </value>
        </inputAssignments>
        <inputAssignments>
            <name>role</name>
            <value>
                <stringValue>Client</stringValue>
            </value>
        </inputAssignments>
        <outputAssignments>
            <assignToReference>householdPeople</assignToReference>
            <name>personAccounts</name>
        </outputAssignments>
    </subflows>
    <variables>
        <name>householdPeople</name>
        <dataType>SObject</dataType>
        <isCollection>true</isCollection>
