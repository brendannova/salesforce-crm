<?xml version="1.0" encoding="UTF-8"?>
<Flow xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>55.0</apiVersion>
    <description>This flow will run when a client update is added for a household on the discovery profile in an attempt to automatically validate the change.</description>
    <environments>Default</environments>
    <interviewLabel>FF employment | auto-validate {!$Flow.CurrentDateTime}</interviewLabel>
    <label>Employment | auto-validate client update</label>
    <processMetadataValues>
        <name>BuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>CanvasMode</name>
        <value>
            <stringValue>AUTO_LAYOUT_CANVAS</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>OriginBuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processType>AutoLaunchedFlow</processType>
    <start>
        <locationX>50</locationX>
        <locationY>0</locationY>
        <connector>
            <targetReference>Attempt_validation</targetReference>
        </connector>
        <doesRequireRecordChangedToMeetCriteria>true</doesRequireRecordChangedToMeetCriteria>
        <filterFormula>ISPICKVAL( {!$Record.Household__r.Fact_Find_Type__c}, &quot;Discovery&quot; )
&amp;&amp;
NOT( ISBLANK( {!$Record.FF_Session__c} ))
&amp;&amp;
{!$Record.FF_Session__r.RecordType.DeveloperName} = &#39;Client_Update&#39;
&amp;&amp;
ISPICKVAL( {!$Record.Validated__c} , &quot;&quot; )</filterFormula>
        <object>FF_Employment__c</object>
        <recordTriggerType>CreateAndUpdate</recordTriggerType>
        <triggerType>RecordAfterSave</triggerType>
    </start>
    <status>Active</status>
    <subflows>
        <description>Given this is a client update for a client at the discovery profile stage, we should attempt auto-validation.</description>
        <name>Attempt_validation</name>
        <label>Attempt validation</label>
        <locationX>176</locationX>
        <locationY>335</locationY>
        <flowName>OW_ff_employment_validate</flowName>
        <inputAssignments>
            <name>ffEmployment</name>
            <value>
                <elementReference>$Record</elementReference>
            </value>
        </inputAssignments>
        <inputAssignments>
            <name>validationType</name>
            <value>
                <stringValue>Automatic</stringValue>
            </value>
        </inputAssignments>
        <storeOutputAutomatically>true</storeOutputAutomatically>
    </subflows>
</Flow>
