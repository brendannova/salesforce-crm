    <description>A reusable sub-flow that take a household ID and list of roles and returns a collection variable with all the people in that household matching those roles.</description>
    <environments>Default</environments>
    <interviewLabel>Account | get people in household {!$Flow.CurrentDateTime}</interviewLabel>
    <label>Account | get people in household</label>
    <loops>
        <description>Loops the ACRs to create a collection of the person account IDs</description>
        <name>Loop_ACRs</name>
        <label>Loop ACRs</label>
        <locationX>50</locationX>
        <locationY>542</locationY>
        <collectionReference>acrs</collectionReference>
        <iterationOrder>Asc</iterationOrder>
        <nextValueConnector>
            <targetReference>Add_person_account_ID</targetReference>
        </nextValueConnector>
        <noMoreValuesConnector>
            <targetReference>Get_person_accounts</targetReference>
        </noMoreValuesConnector>
    </loops>
    <processMetadataValues>
