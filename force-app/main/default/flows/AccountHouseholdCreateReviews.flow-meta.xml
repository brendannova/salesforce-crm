    <description>Superseded by Apex driven process, AnnualReviewScheduler and AnnualReviewGenerator.

Runs periodically to check where annual reviews are needed and creates these.</description>
    <environments>Default</environments>
    <formulas>
        <description>This formula returns true if a household is due a review.</description>
        <name>annualReviewDue</name>
        <dataType>Boolean</dataType>
        <expression>ADDMONTHS(TODAY(), 1) = {!$Record.FinServ__NextReview__c} ||
({!$Record.FinServ__NextReview__c} - TODAY()) &lt; {!$Setup.OW_business_configuration__c.OW_annual_review_lead_time__c}</expression>
    </formulas>
    <formulas>
        <description>The due date will be the last day of the customer&#39;s annual review month.</description>
        <name>annualReviewDueDate</name>
        <dataType>Date</dataType>
        <expression>ADDMONTHS({!$Record.FinServ__NextReview__c}, 1) - 1</expression>
    </formulas>
    <formulas>
        <description>The year the review is for.</description>
        <name>annualReviewYear</name>
        <dataType>Number</dataType>
        <expression>YEAR({!$Record.FinServ__NextReview__c})</expression>
        <scale>0</scale>
    </formulas>
    <formulas>
        <name>egiName</name>
        <dataType>String</dataType>
        <expression>{!Loop_the_clients_in_the_household.FirstName} &amp; &quot; | &quot; &amp; TEXT( {!annualReviewYear} )</expression>
    </formulas>
    <formulas>
        <description>The date of the next annual review, which is the</description>
        <name>nextAnnualReviewDate</name>
        <dataType>Date</dataType>
        <expression>DATE({!annualReviewYear} + 1, MONTH({!$Record.FinServ__NextReview__c}), 1)</expression>
    </formulas>
    <formulas>
        <description>The name that should be given to the annual review.</description>
        <name>reviewName</name>
        <dataType>String</dataType>
        <expression>{!$Record.Name}  &amp; &quot; - Annual review &quot; &amp; TEXT( {!annualReviewYear} )</expression>
    </formulas>
