        <defaultConnectorLabel>Still at data gathering</defaultConnectorLabel>
        <rules>
            <name>Does_not_hold_up_advice</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>Check_each_information_request.InformationRequestType__r.HoldUpAdvice__c</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>NO</stringValue>
                </rightValue>
            </conditions>
            <connector>
