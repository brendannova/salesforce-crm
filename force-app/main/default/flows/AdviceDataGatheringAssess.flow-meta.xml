            </connector>
            <label>Does not hold up advice</label>
        </rules>
        <rules>
            <name>Beyond_data_gathering</name>
            <conditionLogic>or</conditionLogic>
            <conditions>
                <leftValueReference>Check_each_information_request.Status__c</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>READY_FOR_ADVICE</stringValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>Check_each_information_request.Status__c</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>CANCELLED</stringValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>Check_each_information_request.Status__c</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>AWAIT_IDG</stringValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>Check_each_information_request.Status__c</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>CHECKLIST_REVIEW</stringValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>Check_each_information_request.Status__c</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>COMPLETE</stringValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>Check_each_information_request.Status__c</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>FUND_ANALYSIS</stringValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Check_each_information_request</targetReference>
            </connector>
            <label>Beyond data gathering</label>
        </rules>
        <rules>
            <name>Awaiting_ad_hoc_action_beyond_data_gathering</name>
            <conditionLogic>1 AND (2 OR 3 OR 4 OR 5 OR 6 OR 7)</conditionLogic>
            <conditions>
                <leftValueReference>Check_each_information_request.Status__c</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>AWAIT_AD_HOC</stringValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>Check_each_information_request.PreviousStatus__c</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>READY_FOR_ADVICE</stringValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>Check_each_information_request.PreviousStatus__c</leftValueReference>
                <operator>EqualTo</operator>
