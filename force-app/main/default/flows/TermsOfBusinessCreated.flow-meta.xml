<?xml version="1.0" encoding="UTF-8"?>
<Flow xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>62.0</apiVersion>
    <assignments>
        <name>Set_household_ID</name>
        <label>Set household ID</label>
        <locationX>176</locationX>
        <locationY>323</locationY>
        <assignmentItems>
            <assignToReference>householdId</assignToReference>
            <operator>Assign</operator>
            <value>
                <elementReference>$Record.Household__c</elementReference>
            </value>
        </assignmentItems>
        <assignmentItems>
            <assignToReference>personId</assignToReference>
            <operator>Assign</operator>
            <value>
                <elementReference>$Record.Person_Account__c</elementReference>
            </value>
        </assignmentItems>
        <connector>
            <targetReference>Create_chase_TOB_task</targetReference>
        </connector>
    </assignments>
    <description>Runs when a TOB record is accepted for the first time. Runs after save so that actions can be triggered elsewhere like updating the person account and household.</description>
    <environments>Default</environments>
    <formulas>
        <description>The date when the chase TOB task should be due.</description>
        <name>chase_tob_task_due_date</name>
        <dataType>Date</dataType>
        <expression>TODAY() + 7</expression>
    </formulas>
    <interviewLabel>TOB | Created {!$Flow.CurrentDateTime}</interviewLabel>
    <label>TOB | Created</label>
    <processMetadataValues>
        <name>BuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>CanvasMode</name>
        <value>
            <stringValue>AUTO_LAYOUT_CANVAS</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>OriginBuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processType>AutoLaunchedFlow</processType>
    <start>
        <locationX>50</locationX>
        <locationY>0</locationY>
        <connector>
            <targetReference>Set_household_ID</targetReference>
        </connector>
        <filterLogic>and</filterLogic>
        <filters>
            <field>Person_Account__c</field>
            <operator>IsNull</operator>
            <value>
                <booleanValue>false</booleanValue>
            </value>
        </filters>
        <object>Terms_of_Business__c</object>
        <recordTriggerType>Create</recordTriggerType>
        <triggerType>RecordAfterSave</triggerType>
    </start>
    <status>Active</status>
    <subflows>
        <description>Calls the account domain sub flow that takes into consideration the TOB record that has just been processed and makes appropriate account updates.</description>
        <name>Account_sub_flow</name>
        <label>Account sub-flow</label>
        <locationX>176</locationX>
        <locationY>539</locationY>
        <flowName>OW_account_tob_sub</flowName>
        <inputAssignments>
            <name>tobRecord</name>
            <value>
                <elementReference>$Record</elementReference>
            </value>
        </inputAssignments>
    </subflows>
    <subflows>
        <name>Create_chase_TOB_task</name>
        <label>Create chase TOB task</label>
        <locationX>176</locationX>
        <locationY>431</locationY>
        <connector>
            <targetReference>Account_sub_flow</targetReference>
        </connector>
        <flowName>OW_task_create_from_task_information</flowName>
        <inputAssignments>
            <name>household_id</name>
            <value>
                <elementReference>householdId</elementReference>
            </value>
        </inputAssignments>
        <inputAssignments>
            <name>task_type</name>
            <value>
                <stringValue>chase_terms_of_business</stringValue>
            </value>
        </inputAssignments>
        <inputAssignments>
            <name>what_id</name>
            <value>
                <elementReference>personId</elementReference>
            </value>
        </inputAssignments>
        <storeOutputAutomatically>true</storeOutputAutomatically>
    </subflows>
    <variables>
        <name>householdId</name>
        <dataType>String</dataType>
        <isCollection>false</isCollection>
        <isInput>false</isInput>
        <isOutput>false</isOutput>
    </variables>
    <variables>
        <name>personId</name>
        <dataType>String</dataType>
        <isCollection>false</isCollection>
        <isInput>false</isInput>
        <isOutput>false</isOutput>
    </variables>
    <variables>
        <name>specialist_queue_id</name>
        <dataType>String</dataType>
        <isCollection>false</isCollection>
        <isInput>false</isInput>
        <isOutput>false</isOutput>
    </variables>
    <variables>
        <description>Stores values for the chase terms of business task.</description>
        <name>task_chase_tob</name>
        <dataType>SObject</dataType>
        <isCollection>false</isCollection>
        <isInput>false</isInput>
        <isOutput>false</isOutput>
        <objectType>Task</objectType>
    </variables>
</Flow>
