    <decisions>
        <name>Retirement_call_decision</name>
        <label>Retirement call decision</label>
        <locationX>446</locationX>
        <locationY>242</locationY>
        <defaultConnector>
            <targetReference>Set_error</targetReference>
        </defaultConnector>
        <defaultConnectorLabel>Undefined</defaultConnectorLabel>
        <rules>
            <name>Needed_now</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>RetirementCallRequired</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <elementReference>Required</elementReference>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Retirement_call_status_required</targetReference>
            </connector>
            <label>Needed now</label>
        </rules>
        <rules>
            <name>Hold_in_the_future_or_already_held</name>
            <conditionLogic>1 AND (2 OR 3)</conditionLogic>
            <conditions>
                <leftValueReference>RetirementCallRequired</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <elementReference>NotRequired</elementReference>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>RetirementCallNotNeededReason</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <elementReference>RetirementCallRequiredInFuture</elementReference>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>RetirementCallNotNeededReason</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <elementReference>RetirementCallAlreadyHeld</elementReference>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Retirement_call_status_not_required</targetReference>
            </connector>
            <label>Hold in the future or already held</label>
        </rules>
        <rules>
            <name>Never_required</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>RetirementCallRequired</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <elementReference>NotRequired</elementReference>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>RetirementCallNotNeededReason</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <elementReference>RetirementCallNeverRequired</elementReference>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Retirement_call_status_never_required</targetReference>
            </connector>
            <label>Never required</label>
        </rules>
    </decisions>
    <description>Orchestrates the process of assessing a client&#39;s need for a retirement call. Can be called wherever this is necessary, including in onboarding and annual reviews.</description>
    <environments>Default</environments>
    <formulas>
        <description>Sets a default value for the reason why no retirement call is needed.</description>
        <name>RetirementCallNotNeededReasonDefault</name>
        <dataType>String</dataType>
        <expression>CASE({!advice.RetirementCallStatus__c},
&quot;NEVER_REQUIRED&quot;, {!RetirementCallNeverRequired},
CASE({!advice.RetirementCallNotes__c},
{!$Label.AdviceRetirementCallAlreadyHeld}, {!RetirementCallAlreadyHeld},
{!$Label.AdviceRetirementCallNeverRequired}, {!RetirementCallNeverRequired},
{!$Label.AdviceRetirementCallNotRequired}, {!RetirementCallRequiredInFuture},
&quot;&quot;))</expression>
    </formulas>
    <formulas>
        <name>RetirementCallRequiredDefault</name>
        <dataType>String</dataType>
        <expression>CASE({!advice.RetirementCallStatus__c} ,
&quot;REQUIRED&quot;, &quot;REQUIRED&quot;,
&quot;NOT_REQUIRED&quot;, &quot;NOT_REQUIRED&quot;,
&quot;NEVER_REQUIRED&quot;, &quot;NOT_REQUIRED&quot;,
&quot;&quot;)</expression>
    </formulas>
