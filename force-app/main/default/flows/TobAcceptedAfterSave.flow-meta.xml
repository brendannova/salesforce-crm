        <locationX>176</locationX>
        <locationY>323</locationY>
        <connector>
            <targetReference>Get_record_type_ID_for_advice_opportunity</targetReference>
        </connector>
        <filterLogic>and</filterLogic>
        <filters>
            <field>OW_task_information_name__c</field>
