    <description>This flows takes in a date and outputs the tax year end date following that date, and the beginning of the new tax year after that date</description>
    <environments>Default</environments>
    <formulas>
        <name>nextTaxYearEnd</name>
        <dataType>Date</dataType>
        <expression>DATE( YEAR(TODAY()) + IF( 
          MONTH(TODAY()) &gt; 4 || (MONTH(TODAY()) = 4 &amp;&amp; DAY(TODAY()) &gt; 5), 1, 0
          ) 
     , 4, 6
) - 1</expression>
    </formulas>
    <formulas>
        <name>nextTaxYearStart</name>
        <dataType>Date</dataType>
        <expression>DATE( YEAR(TODAY()) + IF( 
          MONTH(TODAY()) &gt; 4 || (MONTH(TODAY()) = 4 &amp;&amp; DAY(TODAY()) &gt; 5), 1, 0
          ) 
     , 4, 6
)</expression>
    </formulas>
    <interviewLabel>Date | Calculate next tax year end and start {!$Flow.CurrentDateTime}</interviewLabel>
