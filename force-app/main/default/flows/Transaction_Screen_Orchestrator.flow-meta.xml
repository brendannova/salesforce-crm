            <name>Review_Transaction_Task</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>task.OW_task_information_name__c</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <elementReference>ReviewTransactionTaskName</elementReference>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Is_Transaction_Linked_To_Expectation</targetReference>
            </connector>
            <label>Review Transaction Task</label>
        </rules>
    </decisions>
