        <rules>
            <name>Reviewed</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>transactionRecord.Status__c</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>Reviewed</stringValue>
