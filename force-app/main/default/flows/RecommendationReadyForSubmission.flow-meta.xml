    <assignments>
        <name>Assign_fulfilment_values</name>
        <label>Assign fulfilment values</label>
        <locationX>50</locationX>
        <locationY>360</locationY>
        <assignmentItems>
            <assignToReference>fulfilment.Id</assignToReference>
            <operator>Assign</operator>
            <value>
                <elementReference>$Record.FulfilmentLegacy__r.Id</elementReference>
            </value>
        </assignmentItems>
        <assignmentItems>
            <assignToReference>fulfilment.Recommendation__c</assignToReference>
            <operator>Assign</operator>
            <value>
                <elementReference>$Record.Id</elementReference>
            </value>
        </assignmentItems>
        <assignmentItems>
            <assignToReference>fulfilment.Destination__c</assignToReference>
            <operator>Assign</operator>
            <value>
                <elementReference>$Record.FulfilmentLegacy__r.Destination__c</elementReference>
            </value>
        </assignmentItems>
        <connector>
            <targetReference>calculate_status</targetReference>
        </connector>
    </assignments>
    <decisions>
        <name>Is_this_recommendation_ready</name>
        <label>Is this recommendation ready</label>
        <locationX>182</locationX>
        <locationY>252</locationY>
        <defaultConnectorLabel>Default Outcome</defaultConnectorLabel>
        <rules>
            <name>Yes</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>$Record.EarliestFulfilmentDate__c</leftValueReference>
                <operator>LessThanOrEqualTo</operator>
                <rightValue>
                    <elementReference>today</elementReference>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Assign_fulfilment_values</targetReference>
            </connector>
            <label>Yes</label>
        </rules>
    </decisions>
    <description>This flow runs every day and checks for rebalances, switches and lump sum recommendations which have an earliest start date of today, and sets their fulfilment to submit forms. Old process. Should be deactivated once all v2 fulfilment is complete</description>
    <environments>Default</environments>
    <formulas>
        <name>today</name>
        <dataType>Date</dataType>
        <expression>TODAY()</expression>
    </formulas>
    <interviewLabel>Recommendation - ready for submission {!$Flow.CurrentDateTime}</interviewLabel>
    <label>zOLD PROCESS Recommendation - ready for submission</label>
    <processMetadataValues>
        <name>BuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>CanvasMode</name>
        <value>
            <stringValue>AUTO_LAYOUT_CANVAS</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>OriginBuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processType>AutoLaunchedFlow</processType>
    <recordUpdates>
        <name>Update_fulfilment</name>
        <label>Update fulfilment</label>
        <locationX>50</locationX>
        <locationY>576</locationY>
        <filterLogic>and</filterLogic>
        <filters>
            <field>Id</field>
            <operator>EqualTo</operator>
            <value>
                <elementReference>$Record.FulfilmentLegacy__c</elementReference>
            </value>
        </filters>
        <inputAssignments>
            <field>Status__c</field>
            <value>
                <elementReference>calculate_status.status</elementReference>
            </value>
        </inputAssignments>
        <object>Fulfillment__c</object>
    </recordUpdates>
    <start>
        <locationX>56</locationX>
        <locationY>0</locationY>
        <connector>
            <targetReference>Is_this_recommendation_ready</targetReference>
        </connector>
        <filterLogic>1 AND 2</filterLogic>
        <filters>
            <field>Status__c</field>
            <operator>EqualTo</operator>
            <value>
                <stringValue>Accepted</stringValue>
            </value>
        </filters>
        <filters>
            <field>EarliestFulfilmentDate__c</field>
            <operator>IsNull</operator>
            <value>
                <booleanValue>false</booleanValue>
            </value>
        </filters>
        <object>Recommendation__c</object>
        <schedule>
            <frequency>Daily</frequency>
            <startDate>2023-01-30</startDate>
            <startTime>00:15:00.000Z</startTime>
        </schedule>
        <triggerType>Scheduled</triggerType>
    </start>
    <status>Active</status>
    <subflows>
        <name>calculate_status</name>
        <label>Calculate status</label>
        <locationX>50</locationX>
        <locationY>468</locationY>
        <connector>
            <targetReference>Update_fulfilment</targetReference>
        </connector>
        <flowName>FulfilmentCalculateStatus</flowName>
        <inputAssignments>
            <name>fulfilment</name>
            <value>
                <elementReference>fulfilment</elementReference>
            </value>
        </inputAssignments>
        <storeOutputAutomatically>true</storeOutputAutomatically>
    </subflows>
    <variables>
        <name>fulfilment</name>
        <dataType>SObject</dataType>
        <isCollection>false</isCollection>
        <isInput>false</isInput>
        <isOutput>false</isOutput>
        <objectType>Fulfillment__c</objectType>
    </variables>
</Flow>
