<?xml version="1.0" encoding="UTF-8"?>
<Flow xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>57.0</apiVersion>
    <decisions>
        <name>Is_the_fulfilment_ready</name>
        <label>Is the fulfilment ready?</label>
        <locationX>182</locationX>
        <locationY>431</locationY>
        <defaultConnector>
            <targetReference>Update_fee</targetReference>
        </defaultConnector>
        <defaultConnectorLabel>No</defaultConnectorLabel>
        <rules>
            <name>Yes</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>Get_fulfilment.Status__c</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>Submit forms</stringValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>Get_fulfilment</leftValueReference>
                <operator>IsNull</operator>
                <rightValue>
                    <booleanValue>false</booleanValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Create_task_to_submit_fee</targetReference>
            </connector>
            <label>Yes</label>
        </rules>
    </decisions>
    <description>This flow runs when a fee has the account which it is being taken form updated. If that account is ready, it creates a task for the fee to be applied.</description>
    <environments>Default</environments>
    <formulas>
        <name>status</name>
        <dataType>String</dataType>
        <expression>IF( ISPICKVAL({!Get_fulfilment.Status__c}, &quot;On hold&quot;), &quot;Draft&quot;, &quot;To be applied&quot;)</expression>
    </formulas>
    <formulas>
        <name>taskType</name>
        <dataType>String</dataType>
        <expression>IF( {!$Record.FeeModel__r.Name}=&quot;Initial fee&quot;, &quot;submit_initial_fee&quot;, &quot;submit_ongoing_fee&quot;)</expression>
    </formulas>
    <interviewLabel>Fee - redirected {!$Flow.CurrentDateTime}</interviewLabel>
    <label>Fee - redirected</label>
    <processMetadataValues>
        <name>BuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
