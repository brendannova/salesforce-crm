    <description>Screen flow to create file processing request for meeting summary. If one already exists, display appropriate message.</description>
    <environments>Default</environments>
    <formulas>
        <name>meetingRecordingFileId</name>
        <dataType>String</dataType>
        <expression>SUBSTITUTE(LEFT({!opportunity.Meeting_Recording_URL__c}, FIND(&quot;/view&quot;, {!opportunity.Meeting_Recording_URL__c}) -1), {!meetingLinkPrefix}, &quot;&quot;)</expression>
    </formulas>
    <formulas>
        <name>UrlValidationOpportunity</name>
        <dataType>Boolean</dataType>
        <expression>NOT(BEGINS({!meetingLinkPrefix}, {!opportunity.Meeting_Recording_URL__c}))
||
CONTAINS(&quot;folders&quot;, {!opportunity.Meeting_Recording_URL__c})</expression>
    </formulas>
    <formulas>
        <name>UrlValidationPageCmp</name>
        <dataType>Boolean</dataType>
        <expression>NOT(BEGINS({!meetingLinkPrefix}, {!MeetingRecordingURL.value}))
||
CONTAINS(&quot;folders&quot;, {!MeetingRecordingURL.value})</expression>
    </formulas>
