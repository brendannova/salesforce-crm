<?xml version="1.0" encoding="UTF-8"?>
<Flow xmlns="http://soap.sforce.com/2006/04/metadata">
    <actionCalls>
        <name>Alert_task_owner</name>
        <label>Alert task owner</label>
        <locationX>176</locationX>
        <locationY>323</locationY>
        <actionName>Task.TaskAssignedToYou</actionName>
        <actionType>emailAlert</actionType>
        <flowTransactionModel>CurrentTransaction</flowTransactionModel>
        <inputParameters>
            <name>SObjectRowId</name>
            <value>
                <elementReference>$Record.Id</elementReference>
            </value>
        </inputParameters>
        <nameSegment>Task.TaskAssignedToYou</nameSegment>
        <versionSegment>1</versionSegment>
    </actionCalls>
    <apiVersion>56.0</apiVersion>
    <description>Formerly used when standard task notifications were not sent for flow tasks. Now marked as unused as we have enabled standard notifications.</description>
    <environments>Default</environments>
    <formulas>
        <name>householdName</name>
        <dataType>String</dataType>
        <expression>{!$Record.FinServ__Household__r.Name}</expression>
    </formulas>
    <formulas>
        <name>justCreatedByOwner</name>
        <dataType>Boolean</dataType>
        <expression>IF(ISNEW(), 
    IF({!$Record.OwnerId} = {!$Record.CreatedById}, TRUE, FALSE),
    TRUE)</expression>
    </formulas>
    <formulas>
        <name>recipientEmail</name>
        <dataType>String</dataType>
        <expression>{!$Record.Owner:User.Email}</expression>
    </formulas>
    <formulas>
        <name>textLink</name>
        <dataType>String</dataType>
        <expression>&quot;https://octopuswealth.lightning.force.com/lightning/r/Task/&quot; + {!$Record.Id} + &quot;/view&quot;</expression>
    </formulas>
    <interviewLabel>Task - assigned to partner {!$Flow.CurrentDateTime}</interviewLabel>
    <label>zUnused | Task - assigned to partner</label>
    <processMetadataValues>
        <name>BuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>CanvasMode</name>
        <value>
            <stringValue>AUTO_LAYOUT_CANVAS</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>OriginBuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processType>AutoLaunchedFlow</processType>
    <start>
        <locationX>50</locationX>
        <locationY>0</locationY>
        <connector>
            <targetReference>Alert_task_owner</targetReference>
        </connector>
        <filterFormula>({!$Record.Owner:User.UserRole.DeveloperName} = &quot;Partner&quot;
||
{!$Record.Owner:User.UserRole.DeveloperName} = &quot;Head_of_partners&quot;
||
{!$Record.Owner:User.UserRole.DeveloperName} = &quot;OMPartner&quot;)
&amp;&amp;
((NOT(ISNEW()) &amp;&amp; ISCHANGED({!$Record.OwnerId}))
||
(ISNEW() &amp;&amp; {!$Record.OwnerId} &lt;&gt; {!$Record.CreatedById}))</filterFormula>
        <object>Task</object>
        <recordTriggerType>CreateAndUpdate</recordTriggerType>
        <triggerType>RecordAfterSave</triggerType>
    </start>
    <status>Obsolete</status>
    <textTemplates>
        <name>emailBody</name>
        <isViewedAsPlainText>false</isViewedAsPlainText>
        <text>&lt;p&gt;Hiya&lt;/p&gt;&lt;p&gt;&lt;br&gt;&lt;/p&gt;&lt;p&gt;You&#39;ve been assigned the task &lt;strong&gt;{!$Record.Subject} &lt;/strong&gt;for the household &lt;strong&gt;{!householdName}&lt;/strong&gt;. Check it out here:&lt;/p&gt;&lt;p&gt;{!textLink}&lt;/p&gt;&lt;p&gt;&lt;br&gt;&lt;/p&gt;&lt;p&gt;Cheers!&lt;/p&gt;</text>
    </textTemplates>
</Flow>
