    <description>Sends an alert when an opportunity is moved to closed won.</description>
    <environments>Default</environments>
    <formulas>
        <name>baseUrl</name>
        <dataType>String</dataType>
        <expression>LEFT({!$Api.Enterprise_Server_URL_260}, FIND( &#39;/services&#39;, {!$Api.Enterprise_Server_URL_260}))</expression>
    </formulas>
    <formulas>
        <name>SlackUserFormula</name>
        <dataType>String</dataType>
        <expression>IF(ISBLANK({!slackUserID}), {!$Record.Owner.FirstName} &amp; &quot; &quot; &amp; {!$Record.Owner.LastName}, &quot;&lt;@&quot;&amp;{!slackUserID}&amp;&quot;&gt;&quot;)</expression>
    </formulas>
    <formulas>
        <description>Is the opportunity Est Liquid Assets greater or equal to Â£5m?</description>
        <name>WhaleOpp</name>
        <dataType>String</dataType>
        <expression>IF({!$Record.Est_Liquid_Assets__c} &gt;= 5000000,&quot;:whale: :whale: :whale:&quot;,&quot;&quot;)</expression>
    </formulas>
