            <targetReference>Send_Public_Slack_Message</targetReference>
        </connector>
        <filterLogic>and</filterLogic>
        <filters>
            <field>slackv2__Workspace_Id__c</field>
            <operator>EqualTo</operator>
            <value>
                <elementReference>$Setup.OW_business_configuration__c.SlackWorkspaceId__c</elementReference>
            </value>
        </filters>
        <filters>
            <field>slackv2__User__c</field>
