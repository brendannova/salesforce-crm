<?xml version="1.0" encoding="UTF-8"?>
<PermissionSet xmlns="http://soap.sforce.com/2006/04/metadata">
    <description>Gives permission to fulfilment update flows</description>
    <hasActivationRequired>false</hasActivationRequired>
    <label>Fulfilment | Send fulfilment updates</label>
    <classAccesses>
        <apexClass>updateEmailRecipients</apexClass>
        <enabled>true</enabled>
    </classAccesses>
    <customPermissions>
        <enabled>true</enabled>
        <name>FulfilmentCanSendFulfilmentUpdate</name>
    </customPermissions>
    <fieldPermissions>
        <editable>true</editable>
        <field>Advice__c.ExcludedUpdateNotes__c</field>
        <readable>true</readable>
    </fieldPermissions>
    <fieldPermissions>
        <editable>true</editable>
        <field>Advice__c.ExcludedUpdateReason__c</field>
        <readable>true</readable>
    </fieldPermissions>
    <fieldPermissions>
        <editable>true</editable>
        <field>Advice__c.FulfilmentUpdateStatus__c</field>
        <readable>true</readable>
    </fieldPermissions>
    <fieldPermissions>
        <editable>true</editable>
        <field>Recommendation__c.ClientInstructions__c</field>
        <readable>true</readable>
    </fieldPermissions>
    <fieldPermissions>
        <editable>false</editable>
        <field>ServiceLevelAgreement__c.Fulfilment__c</field>
        <readable>true</readable>
    </fieldPermissions>
</PermissionSet>
