<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Correct_sort_code_format</fullName>
    <active>true</active>
    <errorConditionFormula>NOT(OR(ISBLANK( Bank_sort_code__c ),
REGEX(  Bank_sort_code__c, &quot;[0-9]{2}-[0-9]{2}-[0-9]{2}&quot;)))
&amp;&amp;
NOT(ISPICKVAL($User.OW_user_type__c,&quot;Integration&quot;))</errorConditionFormula>
    <errorMessage>Sort code is not in the xx-xx-xx format</errorMessage>
</ValidationRule>
