<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>OW_assigned_to_required</fullName>
    <active>true</active>
    <description>Ensures that an assigned to value is given.</description>
    <errorConditionFormula>NOT(ISBLANK( OW_task_type__c ))

&amp;&amp;

ISPICKVAL( OW_status__c, &quot;Active&quot; ) 

&amp;&amp; 

(ISPICKVAL( OW_assigned_to__c, &quot;&quot;  ))</errorConditionFormula>
    <errorDisplayField>OW_assigned_to__c</errorDisplayField>
    <errorMessage>Please give an assigned to value</errorMessage>
</ValidationRule>
