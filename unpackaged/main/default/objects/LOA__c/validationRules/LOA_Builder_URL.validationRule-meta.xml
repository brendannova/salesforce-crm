<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>LOA_Builder_URL</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
ISPICKVAL( MainLOAStatus__c, &quot;Signed&quot;), 
ISBLANK( LOA_Builder_Tab_URL__c )
)</errorConditionFormula>
    <errorMessage>You need to add the LOA Builder Tab URL before marking the LOA as signed.</errorMessage>
</ValidationRule>
