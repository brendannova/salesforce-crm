<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>FormatValidation</fullName>
    <active>true</active>
    <description>Ensures sort codes have the correct format</description>
    <errorConditionFormula>NOT(REGEX(SortCode__c, &quot;[0-9]{2}\\-[0-9]{2}\\-[0-9]{2}&quot;))</errorConditionFormula>
    <errorDisplayField>SortCode__c</errorDisplayField>
    <errorMessage>Sort codes must have the format XX-XX-XX</errorMessage>
</ValidationRule>
