<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>ConvertedLeadSourceRequired</fullName>
    <active>true</active>
    <description>Ensures that a lead source is recorded for all leads that move beyond the unactioned status.</description>
    <errorConditionFormula>ISPICKVAL(LeadSource,&quot;&quot;)&amp;&amp;
IsConverted</errorConditionFormula>
    <errorDisplayField>LeadSource</errorDisplayField>
    <errorMessage>Please record a lead source</errorMessage>
</ValidationRule>
