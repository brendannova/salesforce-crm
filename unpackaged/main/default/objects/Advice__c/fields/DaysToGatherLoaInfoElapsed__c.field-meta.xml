<?xml version="1.0" encoding="UTF-8"?>
<CustomField xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>DaysToGatherLoaInfoElapsed__c</fullName>
    <description>Calculates time taken to gather LOA info, showing elapsed time while this process is not complete and settling once it is.</description>
    <externalId>false</externalId>
    <formula>IF(ISBLANK(AllLoaInfoReceivedTimestamp__c), NOW() - CreatedDate, AllLoaInfoReceivedTimestamp__c - CreatedDate)</formula>
    <label>Days to gather LOA info (elapsed)</label>
    <precision>18</precision>
    <required>false</required>
    <scale>1</scale>
    <trackHistory>false</trackHistory>
    <trackTrending>false</trackTrending>
    <type>Number</type>
    <unique>false</unique>
</CustomField>
