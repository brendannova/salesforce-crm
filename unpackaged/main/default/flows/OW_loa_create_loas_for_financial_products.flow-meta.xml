{!Identify_FPs_needing_LOAs.Public_Provider_Name__r.Name} + &quot; &quot; + {!Identify_FPs_needing_LOAs.FinServ__RecordTypeName__c} + &quot; | &quot; +{!Identify_FPs_needing_LOAs.FinServ__PrimaryOwner__r.LastName} + &quot;, &quot; +{!Identify_FPs_needing_LOAs.FinServ__PrimaryOwner__r.FirstName}, {!Identify_FPs_needing_LOAs.Public_Provider_Name__r.Name} + &quot; (&quot; + {!Identify_FPs_needing_LOAs.Employer_Name__c} + &quot;) &quot; + {!Identify_FPs_needing_LOAs.FinServ__RecordTypeName__c} + &quot; | &quot; +{!Identify_FPs_needing_LOAs.FinServ__PrimaryOwner__r.LastName} + &quot;, &quot; +{!Identify_FPs_needing_LOAs.FinServ__PrimaryOwner__r.FirstName}), IF( CONTAINS({!Identify_FPs_needing_LOAs.FinServ__RecordTypeName__c}, &quot;ISA&quot;),{!Identify_FPs_needing_LOAs.Public_Provider_Name__r.Name} + &quot; &quot; + {!Identify_FPs_needing_LOAs.FinServ__RecordTypeName__c} + &quot; | &quot; +{!Identify_FPs_needing_LOAs.FinServ__PrimaryOwner__r.LastName} + &quot;, &quot; +{!Identify_FPs_needing_LOAs.FinServ__PrimaryOwner__r.FirstName}, IF( OR( CONTAINS({!Identify_FPs_needing_LOAs.FinServ__RecordTypeName__c}, &quot;Life&quot;), CONTAINS({!Identify_FPs_needing_LOAs.FinServ__RecordTypeName__c}, &quot;Family&quot;) ), {!Identify_FPs_needing_LOAs.Public_Provider_Name__r.Name} + &quot; Protection&quot; + &quot; | &quot; + {!Identify_FPs_needing_LOAs.FinServ__PrimaryOwner__r.LastName} + &quot;, &quot; +{!Identify_FPs_needing_LOAs.FinServ__PrimaryOwner__r.FirstName}, {!Identify_FPs_needing_LOAs.Public_Provider_Name__r.Name} + &quot; &quot; +{!Identify_FPs_needing_LOAs.FinServ__RecordTypeName__c} + &quot; | &quot; +{!Identify_FPs_needing_LOAs.FinServ__PrimaryOwner__r.LastName} + &quot;, &quot; +{!Identify_FPs_needing_LOAs.FinServ__PrimaryOwner__r.FirstName} ))) , 80 )</expression>
