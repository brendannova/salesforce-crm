    <formulas>
        <name>CalculatedStatus</name>
        <dataType>String</dataType>
        <expression>IF ( OR( ISBLANK( {!Identify_FPs_needing_LOAs.Public_Provider_Name__c} ), 
       {!Identify_FPs_needing_LOAs.Public_Provider_Name__r.Name} = &quot;Unknown&quot;) , &quot;Awaiting Provider Policy Numbers&quot;,
     IF ( ISBLANK( {!Identify_FPs_needing_LOAs.FinServ__FinancialAccountNumber__c} ), &quot;Awaiting Policy Numbers&quot;,
          &quot;Send to Provider&quot; 
     )
)</expression>
    </formulas>
