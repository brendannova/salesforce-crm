<?xml version="1.0" encoding="UTF-8"?>
<Flow xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>55.0</apiVersion>
    <assignments>
        <description>Sets the name of the liability record using a formula.</description>
        <name>Set_name</name>
        <label>Set name</label>
        <locationX>176</locationX>
        <locationY>311</locationY>
        <assignmentItems>
            <assignToReference>$Record.Name</assignToReference>
            <operator>Assign</operator>
            <value>
                <elementReference>liabilityName</elementReference>
            </value>
        </assignmentItems>
    </assignments>
    <description>Before save flow that runs on the liability object to set the name automatically.</description>
    <environments>Default</environments>
    <formulas>
        <name>liabilityName</name>
        <dataType>String</dataType>
        <expression>{!$Record.Public_provider_list__r.Name} &amp; &quot; - &quot; &amp; TEXT( {!$Record.Type__c} )</expression>
    </formulas>
