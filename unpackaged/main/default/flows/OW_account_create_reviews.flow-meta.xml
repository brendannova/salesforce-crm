    <description>Replaced by a newer flow with new naming convention. 

Scheduled flow to run periodically and create review records for customers where these are due shortly (timeframe is specified in a custom setting).</description>
    <environments>Default</environments>
    <formulas>
        <description>This formula determines whether a given household is due a review.</description>
        <name>due_review</name>
        <dataType>Boolean</dataType>
        <expression>( {!$Record.FinServ__NextReview__c} - TODAY() ) &lt; {!$Setup.OW_business_configuration__c.OW_annual_review_lead_time__c}</expression>
    </formulas>
    <formulas>
        <name>egiName</name>
        <dataType>String</dataType>
        <expression>{!Loop_the_clients_in_the_household.FirstName} &amp; &quot; | &quot; &amp; TEXT( {!reviewYear} )</expression>
    </formulas>
    <formulas>
        <name>nextReviewDate</name>
        <dataType>Date</dataType>
        <expression>DATE( 
{!reviewYear} + 1, 
VALUE( TEXT( {!$Record.OW_annual_review_month__c} ) ) ,
1 
)</expression>
    </formulas>
    <formulas>
        <description>The due date will be the last day of the customer&#39;s annual review month.</description>
        <name>reviewDueDate</name>
        <dataType>Date</dataType>
        <expression>IF( TEXT({!$Record.OW_annual_review_month__c}) = &quot;12&quot;, 
DATE( {!reviewYear}, 12, 31 ),
DATE( {!reviewYear}, VALUE( TEXT( {!$Record.OW_annual_review_month__c})) + 1, 1 ) - 1 
)</expression>
    </formulas>
    <formulas>
        <description>The name that should be given to the annual review.</description>
        <name>reviewName</name>
        <dataType>String</dataType>
        <expression>{!$Record.Name}  &amp; &quot; - Annual review &quot; &amp; TEXT( {!reviewYear} )</expression>
    </formulas>
    <formulas>
        <description>The year the review is for.</description>
        <name>reviewYear</name>
        <dataType>Number</dataType>
        <expression>YEAR( {!$Record.FinServ__NextReview__c} )</expression>
        <scale>2</scale>
    </formulas>
