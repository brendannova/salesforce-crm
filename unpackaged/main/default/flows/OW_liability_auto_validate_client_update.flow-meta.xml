<?xml version="1.0" encoding="UTF-8"?>
<Flow xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>55.0</apiVersion>
    <decisions>
        <name>Public_provider_missing</name>
        <label>Public provider missing?</label>
        <locationX>176</locationX>
        <locationY>335</locationY>
        <defaultConnector>
            <targetReference>Attempt_validation</targetReference>
        </defaultConnector>
        <defaultConnectorLabel>Not missing</defaultConnectorLabel>
        <rules>
            <name>Missing</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>$Record.Custom_Provider_Name__c</leftValueReference>
                <operator>IsNull</operator>
                <rightValue>
                    <booleanValue>false</booleanValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>$Record.Public_Provider_List__c</leftValueReference>
                <operator>IsNull</operator>
                <rightValue>
                    <booleanValue>true</booleanValue>
                </rightValue>
            </conditions>
            <label>Missing</label>
        </rules>
    </decisions>
    <description>This flow will run when a client update is added for a household on the discovery profile in an attempt to automatically validate the change.</description>
    <environments>Default</environments>
    <interviewLabel>Liability | auto-validate client update {!$Flow.CurrentDateTime}</interviewLabel>
    <label>Liability | auto-validate client update</label>
    <processMetadataValues>
        <name>BuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>CanvasMode</name>
        <value>
            <stringValue>AUTO_LAYOUT_CANVAS</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>OriginBuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processType>AutoLaunchedFlow</processType>
    <start>
        <locationX>50</locationX>
        <locationY>0</locationY>
        <connector>
            <targetReference>Public_provider_missing</targetReference>
        </connector>
        <doesRequireRecordChangedToMeetCriteria>true</doesRequireRecordChangedToMeetCriteria>
        <filterFormula>ISPICKVAL( {!$Record.Household__r.Fact_Find_Type__c}, &quot;Discovery&quot; )
&amp;&amp;
NOT( ISBLANK( {!$Record.FF_Session__c} ))
&amp;&amp;
{!$Record.FF_Session__r.RecordType.DeveloperName} = &#39;Client_Update&#39;
&amp;&amp;
ISPICKVAL( {!$Record.Validated__c} , &quot;&quot; )
&amp;&amp;
( ISBLANK({!$Record.Linked_asset_match_id__c}) 
||
(NOT(ISBLANK({!$Record.Linked_asset_match_id__c})) &amp;&amp; NOT(ISBLANK({!$Record.Linked_Asset__c} ))) )</filterFormula>
        <object>FF_Liability__c</object>
        <recordTriggerType>CreateAndUpdate</recordTriggerType>
        <triggerType>RecordAfterSave</triggerType>
    </start>
    <status>Active</status>
    <subflows>
        <name>Attempt_validation</name>
        <label>Attempt validation</label>
        <locationX>308</locationX>
        <locationY>455</locationY>
        <flowName>OW_ff_liability_validate</flowName>
        <inputAssignments>
            <name>ffLiability</name>
            <value>
                <elementReference>$Record</elementReference>
            </value>
        </inputAssignments>
        <inputAssignments>
            <name>validationType</name>
            <value>
                <stringValue>Automatic</stringValue>
            </value>
        </inputAssignments>
        <storeOutputAutomatically>true</storeOutputAutomatically>
    </subflows>
</Flow>
