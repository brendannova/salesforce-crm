    <description>Flow to run when a lead is converted</description>
    <environments>Default</environments>
    <formulas>
        <description>Maps lead employment status values to account working situation values. Should be a temporary solution to a proper fix to align these values.</description>
        <name>employmentSituationMapping</name>
        <dataType>String</dataType>
        <expression>CASE( {!$Record.OW_employment_status__c},
&quot;Employed&quot;, &quot;Working&quot;,
&quot;Semi-retired&quot;, &quot;Semi-retired&quot;,
&quot;Retired&quot;, &quot;Retired&quot;,
&quot;Not working&quot;, &quot;Not currently working&quot;,
&quot;&quot;)</expression>
    </formulas>
    <formulas>
        <description>The name that should be given to this household in the format of &quot;{last name}, {initial of first name}&quot;</description>
        <name>household_name</name>
        <dataType>String</dataType>
        <expression>{!$Record.LastName} &amp; &quot;, &quot; &amp; LEFT( {!$Record.FirstName} , 1 )</expression>
    </formulas>
    <formulas>
        <description>An approximate amount we can expect to generate from the lender if we successfully broker this mortgage.</description>
        <name>mortgage_fee_from_lender</name>
        <dataType>Currency</dataType>
        <expression>IF(ISPICKVAL({!$Record.OW_mortgage_type__c}, &quot;Remortgage&quot;),
0.003 * {!$Record.OW_mortgage_balance__c},
0.0035 * {!$Record.OW_amount_to_borrow__c})</expression>
        <scale>2</scale>
    </formulas>
    <formulas>
        <description>Default close date for mortgage opportunities. 3 months for a remortgage, 6 months for a purchase, and 3 months if not specified.</description>
        <name>mortgage_opportunity_close_date</name>
        <dataType>Date</dataType>
        <expression>CASE( {!$Record.OW_mortgage_type__c}, 
&quot;Purchase&quot;, TODAY() + 180,
&quot;Remortgage&quot;, {!RemortgageCloseDate}, 
TODAY() + 90 )</expression>
    </formulas>
    <formulas>
        <name>mortgage_opportunity_default_name</name>
        <dataType>String</dataType>
        <expression>{!$Record.LastName} &amp; &quot;, &quot; &amp; LEFT( {!$Record.FirstName}, 1 ) &amp; &quot; | &quot; &amp; TEXT( {!$Record.OW_mortgage_type__c} ) &amp; &quot; | &quot; &amp; CASE( {!$Record.OW_property_use__c}, &quot;Live&quot;, &quot;Resi&quot;, &quot;Rent&quot;, &quot;BTL&quot;, &quot;TBC&quot; )</expression>
    </formulas>
    <formulas>
        <name>RemortgageCloseDate</name>
        <dataType>Date</dataType>
        <expression>IF(
AND(
ISPICKVAL({!$Record.OW_mortgage_type__c}, &quot;Remortgage&quot;),
NOT(ISNULL({!$Record.OW_mortgage_rate_expiration__c}))
), 
({!$Record.OW_mortgage_rate_expiration__c} +1), TODAY()+90
)</expression>
    </formulas>
