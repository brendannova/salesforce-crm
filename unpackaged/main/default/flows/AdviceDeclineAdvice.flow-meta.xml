            <name>Await_Decision</name>
            <conditionLogic>or</conditionLogic>
            <conditions>
                <leftValueReference>advice.Advice_Status__c</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>Await decision</stringValue>
                </rightValue>
            </conditions>
            <conditions>
