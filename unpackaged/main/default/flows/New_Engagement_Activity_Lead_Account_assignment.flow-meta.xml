<?xml version="1.0" encoding="UTF-8"?>
<Flow xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>49.0</apiVersion>
    <decisions>
        <name>Account_Found</name>
        <label>Account Found?</label>
        <locationX>423</locationX>
        <locationY>52</locationY>
        <defaultConnectorLabel>Default Outcome</defaultConnectorLabel>
        <rules>
            <name>DO_Account_Found</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>Found_Account.Id</leftValueReference>
                <operator>IsNull</operator>
                <rightValue>
                    <booleanValue>false</booleanValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Update_Engagement_with_Lead_ID</targetReference>
            </connector>
            <label>Account Found</label>
        </rules>
        <rules>
            <name>Account_Not_Found</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>Found_Account.Id</leftValueReference>
                <operator>IsNull</operator>
                <rightValue>
                    <booleanValue>true</booleanValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Search_Leads</targetReference>
            </connector>
            <label>Account Not Found</label>
        </rules>
    </decisions>
    <decisions>
        <description>Lead found - Move on to update the engagement with the account&#39;s ID
No Lead found - Search for Accounts


, if a lead is not found move on to search accounts</description>
        <name>Lead_Found</name>
        <label>Lead Found?</label>
        <locationX>419</locationX>
        <locationY>451</locationY>
        <defaultConnectorLabel>Default Outcome</defaultConnectorLabel>
        <rules>
            <name>DO_Lead_Found</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>Found_lead.Id</leftValueReference>
                <operator>IsNull</operator>
                <rightValue>
                    <booleanValue>false</booleanValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Update_Engagement_with_Lead_ID</targetReference>
            </connector>
            <label>Lead Found</label>
        </rules>
        <rules>
            <name>DO_Lead_not_found</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>Found_lead</leftValueReference>
                <operator>IsNull</operator>
                <rightValue>
                    <booleanValue>true</booleanValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Create_Lead</targetReference>
            </connector>
            <label>Lead not found</label>
        </rules>
    </decisions>
    <description>When a new Engagement activity record is created, this flow searches for an existing lead or account that has a matching email. If one is found then it links the activity to the lead/account record. If none are found, it creates a new lead.</description>
    <interviewLabel>New Engagement Activity - Lead/Account assignment {!$Flow.CurrentDateTime}</interviewLabel>
    <label>New Engagement Activity - Lead/Account assignment</label>
    <processMetadataValues>
        <name>BuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>OriginBuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processType>AutoLaunchedFlow</processType>
    <recordCreates>
        <name>Create_Lead</name>
        <label>Create Lead</label>
        <locationX>428</locationX>
        <locationY>651</locationY>
        <assignRecordIdToReference>newLeadID</assignRecordIdToReference>
        <connector>
            <targetReference>Update_engagement_NewLead</targetReference>
        </connector>
        <inputAssignments>
            <field>Email</field>
            <value>
                <elementReference>input_email</elementReference>
            </value>
        </inputAssignments>
        <inputAssignments>
            <field>FirstName</field>
            <value>
                <elementReference>input_firstName</elementReference>
            </value>
        </inputAssignments>
        <inputAssignments>
            <field>LastName</field>
            <value>
                <elementReference>input_lastName</elementReference>
            </value>
        </inputAssignments>
        <inputAssignments>
            <field>MobilePhone</field>
            <value>
                <elementReference>input_phone</elementReference>
            </value>
        </inputAssignments>
        <inputAssignments>
            <field>Phone</field>
            <value>
                <elementReference>input_phone</elementReference>
            </value>
        </inputAssignments>
        <object>Lead</object>
    </recordCreates>
    <recordLookups>
        <name>Search_Accounts</name>
        <label>Search Accounts</label>
        <locationX>308</locationX>
        <locationY>50</locationY>
        <assignNullValuesIfNoRecordsFound>false</assignNullValuesIfNoRecordsFound>
        <connector>
            <targetReference>Account_Found</targetReference>
        </connector>
        <filterLogic>and</filterLogic>
        <filters>
            <field>PersonEmail</field>
            <operator>EqualTo</operator>
            <value>
                <elementReference>input_email</elementReference>
            </value>
        </filters>
        <object>Account</object>
        <outputReference>Found_Account</outputReference>
        <queriedFields>Id</queriedFields>
    </recordLookups>
    <recordLookups>
        <description>Searches all leads to see if the email matches</description>
        <name>Search_Leads</name>
        <label>Search Leads</label>
        <locationX>427</locationX>
        <locationY>249</locationY>
        <assignNullValuesIfNoRecordsFound>false</assignNullValuesIfNoRecordsFound>
        <connector>
            <targetReference>Lead_Found</targetReference>
        </connector>
        <filterLogic>and</filterLogic>
        <filters>
            <field>Email</field>
            <operator>EqualTo</operator>
            <value>
                <elementReference>input_email</elementReference>
            </value>
        </filters>
        <object>Lead</object>
        <outputReference>Found_lead</outputReference>
        <queriedFields>Id</queriedFields>
    </recordLookups>
    <recordUpdates>
        <name>Update_engagement_NewLead</name>
        <label>Update engagement New Lead</label>
        <locationX>1056</locationX>
        <locationY>651</locationY>
        <filterLogic>and</filterLogic>
        <filters>
            <field>Id</field>
            <operator>EqualTo</operator>
            <value>
                <elementReference>input_engagementID</elementReference>
            </value>
        </filters>
        <inputAssignments>
            <field>Lead_and_Referral__c</field>
            <value>
                <elementReference>newLeadID</elementReference>
            </value>
        </inputAssignments>
        <object>Lead_to_Engagement__c</object>
    </recordUpdates>
    <recordUpdates>
        <name>Update_Engagement_with_Lead_ID</name>
        <label>Update Engagement with Lead ID</label>
        <locationX>1048</locationX>
        <locationY>314</locationY>
        <filterLogic>and</filterLogic>
        <filters>
            <field>Id</field>
            <operator>EqualTo</operator>
            <value>
                <elementReference>input_engagementID</elementReference>
            </value>
        </filters>
        <inputAssignments>
            <field>Account__c</field>
            <value>
                <elementReference>Found_Account.Id</elementReference>
            </value>
        </inputAssignments>
        <inputAssignments>
            <field>Cash__c</field>
            <value>
                <numberValue>1.0</numberValue>
            </value>
        </inputAssignments>
        <inputAssignments>
            <field>Lead_and_Referral__c</field>
            <value>
                <elementReference>Found_lead.Id</elementReference>
            </value>
        </inputAssignments>
        <object>Lead_to_Engagement__c</object>
    </recordUpdates>
    <startElementReference>Initial_Pause</startElementReference>
    <status>Active</status>
    <textTemplates>
