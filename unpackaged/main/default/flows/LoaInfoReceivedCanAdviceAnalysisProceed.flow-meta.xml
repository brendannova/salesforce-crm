    <decisions>
        <name>Has_the_information_been_received_for_this_LOA</name>
        <label>Has the information been received for this LOA?</label>
        <locationX>1056</locationX>
        <locationY>2087</locationY>
        <defaultConnector>
            <targetReference>Set_flag_to_false</targetReference>
        </defaultConnector>
        <defaultConnectorLabel>No</defaultConnectorLabel>
        <rules>
            <name>YesInfoReceived</name>
            <conditionLogic>or</conditionLogic>
            <conditions>
                <leftValueReference>Check_all_LOAs_related_to_this_advice.MainLOAStatus__c</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>Information Received</stringValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>Check_all_LOAs_related_to_this_advice.MainLOAStatus__c</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>Information rerequested</stringValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>Check_all_LOAs_related_to_this_advice.MainLOAStatus__c</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>Specialist reviewed</stringValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>Check_all_LOAs_related_to_this_advice.MainLOAStatus__c</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>LOA Analysis</stringValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>Check_all_LOAs_related_to_this_advice.MainLOAStatus__c</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>Completed</stringValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>Check_all_LOAs_related_to_this_advice.MainLOAStatus__c</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>Cancelled</stringValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Check_all_LOAs_related_to_this_advice</targetReference>
            </connector>
            <label>Yes</label>
        </rules>
