    <actionCalls>
        <name>PostCaseCreationToChatter</name>
        <label>Post case creation to chatter</label>
        <locationX>176</locationX>
        <locationY>647</locationY>
        <actionName>chatterPost</actionName>
        <actionType>chatterPost</actionType>
