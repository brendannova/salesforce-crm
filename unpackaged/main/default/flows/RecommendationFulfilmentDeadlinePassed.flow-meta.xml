<?xml version="1.0" encoding="UTF-8"?>
<Flow xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>56.0</apiVersion>
    <decisions>
        <name>Has_the_fulfilment_deadline_passed</name>
        <label>Has the fulfilment deadline just passed?</label>
        <locationX>776</locationX>
        <locationY>252</locationY>
        <defaultConnectorLabel>Default Outcome</defaultConnectorLabel>
        <rules>
            <name>Yes</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>dateToCompare</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <elementReference>$Flow.CurrentDate</elementReference>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Get_fulfilment</targetReference>
            </connector>
            <label>Yes</label>
        </rules>
    </decisions>
    <decisions>
        <name>What_is_the_fulfilment_state</name>
        <label>What is the fulfilment state?</label>
        <locationX>446</locationX>
        <locationY>468</locationY>
        <defaultConnectorLabel>Default Outcome</defaultConnectorLabel>
        <rules>
            <name>On_hold</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>Get_fulfilment.Status__c</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>On hold</stringValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Create_task_for_ops_to_clean_up</targetReference>
            </connector>
            <label>On hold</label>
        </rules>
        <rules>
            <name>Submit_or_await_payment</name>
            <conditionLogic>or</conditionLogic>
            <conditions>
                <leftValueReference>Get_fulfilment.Status__c</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>Submit forms</stringValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>Get_fulfilment.Status__c</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>Awaiting client payment</stringValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Create_task_for_ops_to_clean_upPaymentRequested</targetReference>
            </connector>
            <label>Submit or await payment</label>
        </rules>
        <rules>
            <name>Payment_made_already</name>
            <conditionLogic>or</conditionLogic>
            <conditions>
                <leftValueReference>Get_fulfilment.Status__c</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>Investment Checks</stringValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>Get_fulfilment.Status__c</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>Complete</stringValue>
                </rightValue>
            </conditions>
            <label>Payment made already</label>
        </rules>
    </decisions>
    <description>This flow runs every day to check if any recommendations have passed their fulfilment deadline. If so, the old process fulfilment is updated appropriately. Should be deactivated once all v2 fulfilment has been completed</description>
    <environments>Default</environments>
    <formulas>
        <name>dateToCompare</name>
        <dataType>Date</dataType>
        <expression>DATE( YEAR({!$Record.FulfilmentDeadline__c}), MONTH({!$Record.FulfilmentDeadline__c}), DAY({!$Record.FulfilmentDeadline__c})+1)</expression>
    </formulas>
    <interviewLabel>Recommendation - fulfilment deadline passed {!$Flow.CurrentDateTime}</interviewLabel>
    <label>zOLDPROCESS Recommendation | fulfilment deadline passed</label>
    <processMetadataValues>
        <name>BuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>CanvasMode</name>
        <value>
            <stringValue>AUTO_LAYOUT_CANVAS</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>OriginBuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processType>AutoLaunchedFlow</processType>
    <recordLookups>
        <name>Get_fulfilment</name>
        <label>Get fulfilment</label>
        <locationX>446</locationX>
        <locationY>360</locationY>
        <assignNullValuesIfNoRecordsFound>false</assignNullValuesIfNoRecordsFound>
        <connector>
            <targetReference>What_is_the_fulfilment_state</targetReference>
        </connector>
        <filterLogic>and</filterLogic>
        <filters>
            <field>Recommendation__c</field>
            <operator>EqualTo</operator>
            <value>
                <elementReference>$Record.Id</elementReference>
            </value>
        </filters>
        <getFirstRecordOnly>true</getFirstRecordOnly>
        <object>Fulfilment__c</object>
        <storeOutputAutomatically>true</storeOutputAutomatically>
    </recordLookups>
    <start>
        <locationX>650</locationX>
        <locationY>0</locationY>
        <connector>
            <targetReference>Has_the_fulfilment_deadline_passed</targetReference>
        </connector>
        <filterLogic>and</filterLogic>
        <filters>
            <field>Status__c</field>
            <operator>EqualTo</operator>
            <value>
                <stringValue>Accepted</stringValue>
            </value>
        </filters>
        <object>Recommendation__c</object>
        <schedule>
            <frequency>Daily</frequency>
            <startDate>2023-02-01</startDate>
            <startTime>00:15:00.000Z</startTime>
        </schedule>
        <triggerType>Scheduled</triggerType>
    </start>
    <status>Active</status>
    <subflows>
