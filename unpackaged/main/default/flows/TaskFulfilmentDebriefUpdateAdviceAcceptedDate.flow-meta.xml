                <leftValueReference>Get_fulfilment.Advice__r.DateAccepted__c</leftValueReference>
                <operator>GreaterThan</operator>
                <rightValue>
                    <elementReference>$Record.CompletedDateTime</elementReference>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Update_advice_date_accepted</targetReference>
            </connector>
