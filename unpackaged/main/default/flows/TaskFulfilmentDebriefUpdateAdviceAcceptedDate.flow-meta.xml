    <decisions>
        <name>Accepted_date</name>
        <label>Accepted date?</label>
        <locationX>182</locationX>
        <locationY>431</locationY>
        <defaultConnectorLabel>Later</defaultConnectorLabel>
        <rules>
            <name>Advice_date_blank_or_greater</name>
            <conditionLogic>or</conditionLogic>
            <conditions>
                <leftValueReference>Get_fulfilment.Advice__r.DateAccepted__c</leftValueReference>
                <operator>IsNull</operator>
                <rightValue>
                    <booleanValue>true</booleanValue>
                </rightValue>
            </conditions>
