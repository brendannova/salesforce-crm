<?xml version="1.0" encoding="UTF-8"?>
<SharingRules xmlns="http://soap.sforce.com/2006/04/metadata">
    <sharingCriteriaRules>
        <fullName>OW_share_mortgage_opportunities</fullName>
        <accessLevel>Read</accessLevel>
        <description>Shares any mortgage opportunities with everyone who is part of OW</description>
        <label>Share mortgage opportunities</label>
        <sharedTo>
            <role>Head_of_Partners</role>
        </sharedTo>
        <criteriaItems>
            <field>RecordTypeId</field>
            <operation>equals</operation>
            <value>Mortgage</value>
        </criteriaItems>
        <includeRecordsOwnedByAll>true</includeRecordsOwnedByAll>
    </sharingCriteriaRules>
    <sharingCriteriaRules>
        <fullName>YouTubeOpportunities</fullName>
        <accessLevel>Read</accessLevel>
        <description>Provides the YouTube group (James) access to open opportunities that are have YouTube as the source so that assistance can be provided to the partner that owns the opportunity by those who generated the lead.</description>
        <label>YouTube Opportunities</label>
        <sharedTo>
            <group>OW_youtube_leads</group>
        </sharedTo>
        <criteriaItems>
            <field>LeadSource</field>
            <operation>equals</operation>
            <value>YouTube</value>
        </criteriaItems>
        <criteriaItems>
            <field>IsClosed</field>
            <operation>equals</operation>
            <value>False</value>
        </criteriaItems>
        <includeRecordsOwnedByAll>true</includeRecordsOwnedByAll>
    </sharingCriteriaRules>
    <sharingOwnerRules>
        <fullName>OW_mortgage_support_specialist_access</fullName>
        <accessLevel>Edit</accessLevel>
        <description>Gives access for those in the mortgage support specialist role to edit opportunities owned by mortgage specialists.</description>
        <label>Mortgage support specialist access</label>
        <sharedTo>
            <role>OW_mortgage_support_specialist</role>
        </sharedTo>
        <sharedFrom>
            <role>OW_mortgage_specialist</role>
        </sharedFrom>
    </sharingOwnerRules>
</SharingRules>
